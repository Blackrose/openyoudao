# Maintainer: justzx <justzx2011@gmail.com>
pkgname=openyoudao
#true && pkgname=('openyoudao-gtk2')
pkgver=alpha
pkgrel=1
pkgdesc="a youdao client for linux"
arch=('x86_64' 'i686')
url="http://www.openyoudao.org/"
license=('LGPL3')
depends=('python2' 'xclip' 'inotify-tools' 'python-xlib' 'python2-lxml' 'python2-requests' 'pywebkitgtk' 'python2-beautifulsoup3')
install="openyoudao.install"
source=("https://github.com/justzx2011/openyoudao/tarball/$pkgver")
md5sums=('608556b3f90ab8024d2ac41beea7f02a')
package() {
  cd ${srcdir}/justzx2011-openyoudao-*/
  # bin
  install -Dm755 scripts/openyoudao \
    "$pkgdir/usr/bin/openyoudao"
  # libs
  #/var/cache/openyoudao#
  install -d "$pkgdir/usr/lib/python2.7/site-packages/openyoudao"
  install -Dm644 ./*.py \
    "$pkgdir/usr/lib/python2.7/site-packages/openyoudao"
  install -d "$pkgdir/usr/lib/python2.7/site-packages/openyoudao/cache"
  cp -rf cache/* "$pkgdir/usr/lib/python2.7/site-packages/openyoudao/cache"
  chmod 777 "$pkgdir/usr/lib/python2.7/site-packages/openyoudao/cache"
  #install -dm644 cache/* \
  #  "$pkgdir/usr/lib/python2.7/site-packages/openyoudao/cache"
  # desktop file
  install -Dm644 desktop/openyoudao.desktop \
    "$pkgdir/usr/share/applications/openyoudao.desktop"
}
